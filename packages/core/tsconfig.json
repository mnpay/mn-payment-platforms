{
  "extends": "@tsconfig/recommended",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strict": true,
    "strictNullChecks": true,
    "types": [
      "vitest/globals"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.json",
    "**/*.js",
    "**/*.mjs",
    "**/*.cjs",
    ".eslintrc.cjs"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
}