{
  "extends": "@packages/tsconfig",
  "compilerOptions": {
    "rootDir": ".",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./@types",
    "outDir": "./dist",
    "paths": {
      "@mnpay/hipay/*": [
        "./*"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.cjs",
    "./**/*.js",
    "./**/*.mjs",
    "./**/*.json"
  ],
  "exclude": [
    "./dist",
    "./@types"
  ]
}