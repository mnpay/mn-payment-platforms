{
  "extends": "@packages/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./@types",
    "outDir": "./dist",
    "types": ["vite/client", "vitest/globals"],
    "paths": {
      "@/*": [
        "./*"
      ],
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.cjs",
    "./**/*.js",
    "./**/*.mjs",
    "./**/*.json"
  ],
  "exclude": [
    "./dist",
    "./@types"
  ]
}