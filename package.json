{
  "name": "mongolian-payment-platforms",
  "version": "1.2.1",
  "main": "index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "g:rimraf": "cd $INIT_CWD && rimraf",
    "g:eslint": "cd $INIT_CWD && eslint",
    "g:vite-node": "cd $INIT_CWD && vite-node",
    "g:vite": "cd $INIT_CWD && vite",
    "g:vitest": "cd $INIT_CWD && vitest",
    "g:tsc": "cd $INIT_CWD && tsc && tsc-alias",
    "g:clear-build": "cd $INIT_CWD && yarn g:rimraf dist && yarn g:rimraf @types",
    "g:build": "cd $INIT_CWD && yarn g:clear-build && yarn g:vite build && yarn g:tsc",
    "g:lint": "cd $INIT_CWD && yarn g:eslint ./",
    "g:test": "cd $INIT_CWD && yarn g:vitest run",
    "g:publish": "cd $INIT_CWD && yarn npm publish",
    "lint": "nx run-many -t lint",
    "build": "nx run-many -t build",
    "test": "yarn g:test",
    "release": "nx run-many -t release",
    "postinstall": "husky"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mnpay/mn-payment-platforms.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/types": "^19.8.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@mnpay/dugaar-deeree": "workspace:^",
    "@mnpay/golomt": "workspace:^",
    "@mnpay/hipay": "workspace:^",
    "@mnpay/qpay": "workspace:^",
    "@packages/core": "workspace:^",
    "@tsconfig/recommended": "^1.0.8",
    "@types/eslint": "^9.6.1",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vitest/coverage-v8": "^3.1.3",
    "axios-mock-adapter": "^2.1.0",
    "dayjs": "^1.11.13",
    "esbuild-node-externals": "^1.18.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "lodash": "^4.17.21",
    "msw": "^2.7.6",
    "nx": "20.8.1",
    "prettier": "^3.5.3",
    "prompts": "^2.4.2",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vite": "^6.3.5",
    "vite-node": "^3.1.3",
    "vite-plugin-externalize-deps": "^0.9.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3",
    "zod": "^3.24.4"
  },
  "packageManager": "yarn@4.0.2"
}
