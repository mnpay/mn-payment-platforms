{
  "name": "mongolian-payment-platforms",
  "version": "1.0.4",
  "main": "index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "g:rimraf": "cd $INIT_CWD && rimraf",
    "g:eslint": "cd $INIT_CWD && eslint",
    "g:vite-node": "cd $INIT_CWD && vite-node",
    "g:vite": "cd $INIT_CWD && vite",
    "g:vitest": "cd $INIT_CWD && vitest",
    "g:tsc": "cd $INIT_CWD && tsc && tsc-alias",
    "g:clear-build": "cd $INIT_CWD && yarn g:rimraf dist && yarn g:rimraf @types",
    "g:build": "cd $INIT_CWD && yarn clear-build && yarn g:vite-node esbuild.config.ts && yarn g:tsc",
    "g:lint": "cd $INIT_CWD && yarn g:eslint ./",
    "g:test": "cd $INIT_CWD && yarn g:vitest run",
    "g:publish": "cd $INIT_CWD && yarn npm publish",
    "lint": "nx run-many -t lint",
    "build": "nx run-many -t build",
    "test": "yarn g:test",
    "release": "nx run-many -t release",
    "postinstall": "husky"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mnpay/mn-payment-platforms.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@commitlint/types": "^19.0.3",
    "@eslint/eslintrc": "^3.0.2",
    "@eslint/js": "^9.0.0",
    "@mnpay/dugaar-deeree": "workspace:^",
    "@mnpay/hipay": "workspace:^",
    "@mnpay/qpay": "workspace:^",
    "@packages/core": "workspace:^",
    "@types/eslint": "^8.56.7",
    "@types/lodash": "^4.17.0",
    "@types/node": "^20.12.5",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.5.0",
    "@vitest/coverage-v8": "^1.4.0",
    "dayjs": "^1.11.10",
    "esbuild-node-externals": "^1.13.0",
    "eslint": "^9.0.0",
    "eslint-config-love": "^44.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-xo": "^0.44.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "lodash": "^4.17.21",
    "msw": "^2.2.13",
    "nx": "18.2.3",
    "prettier": "^3.2.5",
    "prompts": "^2.4.2",
    "rimraf": "^5.0.5",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.4.4",
    "typescript-eslint": "^7.5.0",
    "vite": "^5.2.8",
    "vite-node": "^1.4.0",
    "vite-plugin-externalize-deps": "^0.8.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.4.0",
    "zod": "^3.22.4"
  },
  "packageManager": "yarn@4.0.2"
}
