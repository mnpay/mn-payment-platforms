{
  "name": "mongolian-payment-platforms",
  "version": "1.0.2",
  "main": "index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "g:rimraf": "cd $INIT_CWD && rimraf",
    "g:eslint": "cd $INIT_CWD && eslint",
    "g:vite-node": "cd $INIT_CWD && vite-node",
    "g:vitest": "cd $INIT_CWD && vitest",
    "g:tsc": "cd $INIT_CWD && tsc && tsc-alias",
    "g:build": "cd $INIT_CWD && yarn g:rimraf dist && yarn g:rimraf @types && yarn g:vite-node esbuild.config.ts && yarn g:tsc",
    "g:lint": "cd $INIT_CWD && yarn g:eslint --ext .ts,.mjs,cjs,.json,.js ./",
    "g:test": "cd $INIT_CWD && yarn g:vitest run",
    "g:publish": "cd $INIT_CWD && yarn npm publish",
    "lint": "nx run-many -t lint",
    "build": "nx run-many -t build",
    "test": "yarn g:test",
    "release": "nx run-many -t release",
    "postinstall": "husky"
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mnpay/mn-payment-platforms.git"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@commitlint/types": "^18.6.0",
    "@mnpay/dugaar-deeree": "workspace:^",
    "@mnpay/hipay": "workspace:^",
    "@types/eslint": "^8.56.2",
    "@types/lodash": "^4",
    "@types/node": "^20.11.15",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@vitest/coverage-v8": "^1.2.2",
    "dayjs": "^1.11.10",
    "esbuild-node-externals": "^1.12.0",
    "eslint": "^8.56.0",
    "eslint-config-common": "workspace:^",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^9.0.8",
    "lint-staged": "^15.2.1",
    "lodash": "^4.17.21",
    "msw": "^2.1.5",
    "nx": "17.3.1",
    "prettier": "^3.2.4",
    "prompts": "^2.4.2",
    "rimraf": "^5.0.5",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-node": "^1.2.2",
    "vitest": "^1.2.2"
  },
  "packageManager": "yarn@4.0.2"
}
